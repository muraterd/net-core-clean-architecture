@using Data.Helpers

@model WebCMS.Areas.Admin.Features.Users.Profile.ProfileViewModel
@{
    ViewData["Title"] = "Users";
    Layout = "~/Areas/Admin/Views/Layouts/_LayoutMain.cshtml";
}

<div class="content-wrapper">
    <div class="content">

        <div class="bg-white border rounded user-profile">
            <div class="row no-gutters">
                <div class="col-lg-4 col-xl-3">
                    <div class="profile-content-left pt-5 pb-3 px-3 px-xl-5">
                        <div class="card text-center widget-profile px-0 border-0">
                            <div class="card-img mx-auto">
                                <profile-photo file-name="@Model.ProfilePhoto.FileName" path="@FileUploadSize.SMALL" css-class="profile-photo" />
                                @*<img src="/admin/public/img/user-avatar-default.png" alt="user image" width="100">*@
                            </div>
                            <div class="card-body">
                                <h4 class="py-2 text-dark">@Model.FullName</h4>
                                <p>@Model.Email</p>
                            </div>
                        </div>

                        <hr class="w-100">
                    </div>
                </div>
                <div class="col-lg-8 col-xl-9">
                    <div class="profile-content-right py-5">
                        <ul class="nav nav-tabs px-3 px-xl-5 nav-style-border" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link" id="timeline-tab" data-toggle="tab" href="#actions">Activity</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" id="settings-tab" data-toggle="tab" href="#settings">Settings</a>
                            </li>
                        </ul>
                        <div class="tab-content px-3 px-xl-5">
                            <div class="tab-pane fade" id="actions">
                                <div class="mt-5">
                                    Son aksiyonlar burada olacak...
                                </div>
                            </div>
                            <div class="tab-pane fade active show" id="settings" role="tabpanel" aria-labelledby="settings-tab">
                                <div class="mt-5">
                                    <form method="post" enctype="multipart/form-data">
                                        <div class="form-group row mb-6">
                                            <label for="coverImage" class="col-sm-4 col-lg-2 col-form-label">User Image</label>
                                            <div class="col-sm-8 col-lg-10">
                                                <div class="custom-file mb-1">
                                                    <input asp-for="ProfilePicture" type="file" class="custom-file-input">
                                                    <label class="custom-file-label" for="coverImage">Choose file...</label>
                                                    <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label for="firstName">Ad</label>
                                                    <input asp-for="FirstName" type="text" class="form-control">
                                                </div>
                                            </div>

                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label for="lastName">Soyad</label>
                                                    <input asp-for="LastName" type="text" class="form-control">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group mb-4">
                                            <label for="email">Email</label>
                                            <input asp-for="Email" type="text" class="form-control">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-group mt-3 mb-4 d-flex justify-content-between">
                                            <label asp-for="IsActive">Aktif</label>
                                            <label class="switch switch-icon switch-primary switch-pill form-control-label">
                                                <input asp-for="IsActive" type="checkbox" value="true" class="switch-input form-check-input">
                                                <span class="switch-label"></span>
                                                <span class="switch-handle"></span>
                                            </label>
                                        </div>

                                        <div class="d-flex justify-content-end mt-5">
                                            <button type="submit" class="btn btn-primary mb-2 btn-pill">Update Profile</button>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>