@model UI.Areas.Admin.Features.Auth.Login.LoginViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layouts/_LayoutLogin.cshtml";
}

@inject IViewLocalizer Localizer;

<div class="row justify-content-center mt-5">
    <div class="col-xl-5 col-lg-6 col-md-10">
        <div class="card">
            <div class="card-header bg-primary">
                <div class="app-brand">
                    <a href="/index.html">
                        <svg class="brand-icon" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid" width="30" height="33" viewBox="0 0 30 33">
                            <g fill="none" fill-rule="evenodd">
                                <path class="logo-fill-blue" fill="#7DBCFF" d="M0 4v25l8 4V0zM22 4v25l8 4V0z"></path>
                                <path class="logo-fill-white" fill="#FFF" d="M11 4v25l8 4V0z"></path>
                            </g>
                        </svg>
                        <span class="brand-name">Admin Panel</span>
                    </a>
                </div>
            </div>
            <div class="card-body p-5">
                <h4 class="text-dark mb-4">@Localizer["Title_Login"]</h4>

                <error-message model="@Model" />

                <form method="post">
                    <div class="row">
                        <div class="form-group col-md-12 mb-4">
                            <label>@Localizer["Label_Email"]</label>
                            <input asp-for="Email" class="form-control input-lg" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12 ">
                            <label>@Localizer["Label_Password"]</label>
                            <input asp-for="Password" type="password" class="form-control input-lg" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <div class="d-flex my-2 justify-content-between">
                                <div class="d-inline-block mr-3">
                                    <label class="control control-checkbox checkbox-primary">
                                        @Localizer["Label_RememberMe"]
                                        <input type="checkbox" asp-for="RememberMe" />
                                        <div class="control-indicator"></div>
                                    </label>

                                </div>
                                <p><a asp-controller="Auth" asp-action="ForgotPassword" class="text-blue">@Localizer["ForgotPassword"]</a></p>
                            </div>
                            <button type="submit" class="btn btn-lg btn-primary btn-block mb-4">@Localizer["Button_Login"]</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

